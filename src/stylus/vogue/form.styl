form()
  for preset in arguments
    form-{preset}()

form-header()
  & > header
    margin-bottom 3rem

form-section()
  & > section
    row wide-block gap
    margin-bottom 3rem

form-footer()
  & > footer
    borders top
    padding-top 2rem
    padding-left 1.5rem
    padding-right 1.5rem
    margin-bottom 4rem

    & > nav
      row nowrap middle right


form-field()
  .field
    flex 1 1 39rem
    max-width 48rem
    padding-bottom 2rem
    margin-bottom 2rem

    & > label
      type label
      margin-bottom 2rem

      & > p
        margin-bottom 1rem

form-input()
  input
    width available
    type editor
    display block
    padding 1.5rem
    borders all rounded
    margin-bottom 1rem

    &:disabled
      colors kite-gray lightest-kite-gray

